extends ../layout

block content
  section(class="text-center")
    div(class="container")
      div(class="row")
        div(class="col-sm-10 col-md-10")
          h1 !{lang.academy.title}
          p(class="lead") !{lang.academy.subtitle}
  section(class="text-center")
    div(class="container")
      div(class="row")
        - var count = 0;
        each post, index in posts
          div(class="col-sm-6 col-md-4 text-center m-b-40")
            img(src=post.preview_img class='width-100 m-b-10')
            h4 !{post.preview_title}
            p !{post.preview_subtitle}
            div
              a(class="btn btn--primary" href="/academy/"+index)
                span(class="btn__text type--uppercase") !{post.preview_button}
          if (count % 2 == 1)
            div(class="col-sm-12 visible-sm visible-xs")
          if (count % 3 == 2)
            div(class="col-md-12 hidden-sm hidden-xs")
          - count += 1;
                