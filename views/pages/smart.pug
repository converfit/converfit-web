extends ../layout

block content
  section(class="imagebg videobg bg--secondary" data-overlay="6")
    video(autoplay loop muted)
      source(src="/assets/video/loop_740.mov")
      source(src="/assets/video/loop_740.mp4")

    div(class="container" id="home-main-section")
      div(class='row')
        div(class='col-sm-10 col-md-8 col-md-offset-2 text-center')
          h2 !{lang.smart.title}
          p !{lang.smart.subtitle}
          div(class="m-t-20") !{lang.smart.footer}
      
  section(class="text-center")
    div(class="container")
      div(class="row")
        div(class="col-sm-12 col-md-8 col-md-offset-2")
          h3 !{lang.smart.laptops.title}
          p !{lang.smart.laptops.subtitle}

      div(class="row m-t-50")
        div(class="col-sm-10 col-md-4 col-md-offset-2")
          h4(class="m-b-0") !{lang.smart.laptops.option_1_title}
          div !{lang.smart.laptops.option_1_content} 
        div(class="col-sm-10 col-md-4")
          h4(class="m-b-0") !{lang.smart.laptops.option_2_title}
          div !{lang.smart.laptops.option_2_content}
          
  section(class="bg--secondary")
    div(class="container text-center")
      div(class="row")
        div(class="col-sm-12 col-md-8 col-md-offset-2")
          h3 !{lang.smart.tech.title}  
          p !{lang.smart.tech.subtitle}
          div(class="row m-t-50")
            div(class="col-sm-12 col-md-6")
              div !{lang.smart.tech.content_image}
            div(class="col-sm-12 col-md-6 text-left")
              h5(class="m-b-20") !{lang.smart.tech.content_title}
              div !{lang.smart.tech.content}

  
  section(class="")
    div(class="container text-center")
      div(class="row")
        div(class="col-sm-12 col-md-8 col-md-offset-2")
          h3 !{lang.smart.install.title}
          p !{lang.smart.install.subtitle}
          div(class="row m-t-50")
            div(class="col-sm-12 col-md-6 text-right")
              h5(class="m-b-20") !{lang.smart.install.content_title}
              div !{lang.smart.install.content}
              img(class="m-b-0" src="/assets/img/prestashop_icon.png" width="300px")
  
  section(class="bg--secondary text-center")
    div(class="container")
      div(class="row m-b-20")
        div(class="col-sm-10 col-md-8 col-md-offset-2")
          h3(class="m-b-0") !{lang.smart.clients.title}
          p !{lang.smart.clients.subtitle}
      div(class="row")
        div(class="col-sm-10 col-md-8 col-md-offset-2")
          img(class="m-b-0 m-l-10 m-r-10" src="/assets/img/krack.png" width="125px")
          img(class="m-b-0 m-l-10 m-r-10" src="/assets/img/pintar_sin_parar.png" width="125px")
          
  section(class="")
    div(class="container")
      div(class="row text-center m-b-50")
        div(class="col-sm-12 col-md-12")
          h3 !{lang.smart.pricing.title}
          p !{lang.smart.pricing.subtitle}

      div(class="row")
        div(class="col-sm-12 col-md-3")
          div(class="pricing pricing-1 boxed boxed--border boxed--lg text-center")
            h2(class='color--primary') Starter
            h2
              span(class="pricing__dollar small") €&nbsp;
              | !{lang.smart.pricing.starter.price}
              small #{lang.startups.month}
            ul
              li !{lang.smart.pricing.starter.limit}
            a(class="btn btn--primary" href="https://conver.fit/app/access/signup")
              span(class="btn__text type--uppercase") Prueba 1 mes gratis
        div(class="col-sm-12 col-md-3")
          div(class="pricing pricing-1 boxed boxed--border boxed--lg text-center")
            h2(class='color--primary') Regular
            h2
              span(class="pricing__dollar small") €&nbsp;
              | !{lang.smart.pricing.regular.price}
              small #{lang.startups.month}
            ul
              li !{lang.smart.pricing.regular.limit}Hasta 100.000<br/>Usuarios/mes
            a(class="btn btn--primary" href="https://conver.fit/app/access/signup")
              span(class="btn__text type--uppercase") Prueba 1 mes gratis
        div(class="col-sm-12 col-md-3")
          div(class="pricing pricing-1 boxed boxed--border boxed--lg text-center")
            h2(class='color--primary') Plus
            h2
              span(class="pricing__dollar small") €&nbsp;
              | !{lang.smart.pricing.plus.price}
              small #{lang.startups.month}
            ul
              li !{lang.smart.pricing.plus.limit}
            a(class="btn btn--primary" href="https://conver.fit/app/access/signup")
              span(class="btn__text type--uppercase") Prueba 1 mes gratis
        div(class="col-sm-12 col-md-3")
          div(class="pricing pricing-1 boxed boxed--border boxed--lg text-center")
            h2(class='color--primary') Enterprise
            h2
              span(class="pricing__dollar small") €&nbsp;
              | !{lang.smart.pricing.enterprise.price}
              small #{lang.startups.month}
            ul
              li !{lang.smart.pricing.enterprise.limit}
            a(class="btn btn--primary" href="https://conver.fit/app/access/signup")
              span(class="btn__text type--uppercase") #{lang.startups.select_plan}
  
  section(class="bg--secondary text-center")
    div(class="container")
      div(class="row")
        div(class="col-sm-10 col-md-8")
          h3 !{lang.smart.contact.title}
          p !{lang.smart.contact.subtitle}
          div
            a(class="btn btn--primary type--uppercase" href='/calendly')
              span(class="btn__text") Solicitar Demo

            a(class="btn btn--secondary type--uppercase" href='/calendly')
              span(class="btn__text") Contacta
