  body
    
    div(class='nav-container')
      div(class='bar bar--sm visible-xs')
        div(class='container')
          div(class='row')
            div(class='col-xs-6')
              div(class='bar__module')
                a(href='/')
                  img(class="logo logo-dark" alt="logo" src="/assets/img/logo_black.png")
                  img(class="logo logo-light" alt="logo" src="/assets/img/logo_white.png")
            div(class='col-xs-6 text-right')
              div(class='bar__module')
                a(href='javascript:void(0);' class='hamburger-toggle' data-toggle-class='#menu1;hidden-xs')
                  i(class='icon icon--sm stack-interface stack-menu')

      nav(id="menu1" class="bar bar--sm bar-1 hidden-xs hiddem-sm" data-scroll-class='50px:pos-fixed')
        div(class='container-fluid')
          div(class='row')
            div(class='col-md-2 col-sm-2 hidden-xs')
              div(class='bar__module')
                a(href='/')
                  img(class="logo logo-dark" alt="logo" src="/assets/img/logo_black.png")
                  img(class="logo logo-light" alt="logo" src="/assets/img/logo_white.png")

    div(class='main-container')
      h1= message
      h2= error.status
      pre #{error.stack}
      
      
